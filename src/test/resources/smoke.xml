<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<!-- Smoke Tests -->
<!-- <suite parallel = "tests" name="Suite"> -->
<suite parallel = "tests" name="Smoke Test Suite">

	<groups>
		<run>
			<include name="Smoke"/>
		</run>
	</groups>
	
	<listeners>
        <listener class-name="resources.ExtentListeners"/>
    </listeners>
	
	<test thread-count="5" name="Login Success Test">
    	<classes>
      		<class name="tests.LoginSuccessTest"/>
    	</classes>
  	</test>
	<test thread-count="5" name="Error Validations Test">
    	<classes>
      		<class name="tests.LoginFailureTest"/>
    	</classes>
  	</test> 
  	<test thread-count="5" name="Review Orders Test">
    	<classes>
      		<class name="tests.SearchOrdersTest"/>
    	</classes>
  	</test>
</suite>